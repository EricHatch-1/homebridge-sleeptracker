{
  "pluginAlias": "Sleeptracker",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Sleeptracker Adjustable Base",
  "footerDisplay": "Creates momentary switches in Apple Home.",
  "schema": {
    "type": "object",
    "required": [
      "name",
      "email",
      "password"
    ],
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "minLength": 1,
        "default": "Sleeptracker"
      },
      "email": {
        "title": "Email",
        "type": "string",
        "format": "email",
        "placeholder": "you@example.com"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "format": "password"
      },
      "namespace": {
        "title": "Namespace (optional)",
        "type": "string",
        "description": "Only required for some accounts/regions.",
        "default": ""
      },
      "processorId": {
        "title": "Processor ID (optional)",
        "type": "integer",
        "description": "Leave blank to auto-detect."
      },
      "authClientId": {
        "title": "Auth client id (advanced)",
        "type": "string",
        "description": "Defaults to the official app client id. Change only if instructed.",
        "default": "E3MlC3qvwJbsWo"
      },
      "appClientVersion": {
        "title": "App client version (advanced)",
        "type": "string",
        "description": "Defaults to the official app version. Change only if instructed.",
        "default": "3.2.5"
      },
      "exposeEnvironment": {
        "title": "Expose environment sensors",
        "type": "boolean",
        "description": "Temperature, humidity, CO2, VOC, and air quality sensors.",
        "default": true
      },
      "statusPollIntervalSeconds": {
        "title": "Bed light poll interval (seconds)",
        "type": "integer",
        "description": "How often to refresh the Bed Light state. Minimum 5 seconds.",
        "default": 15
      },
      "commands": {
        "title": "Commands",
        "type": "array",
        "description": "HomeKit switches to create. Most commands are momentary.",
        "items": {
          "type": "object",
          "required": [
            "name",
            "command"
          ],
          "properties": {
            "name": {"type": "string", "title": "Name"},
            "command": {"type": "integer", "title": "Command"},
            "requestStatus": {"type": "boolean", "title": "Request status (optional)"}
          }
        },
        "default": [
          {"name": "Flat", "command": 2},
          {"name": "Zero-G", "command": 0},
          {"name": "TV Position", "command": 3},
          {"name": "Anti-Snore", "command": 4},
          {"name": "Favorite 1", "command": 6},
          {"name": "Favorite 2", "command": 9},
          {"name": "Toggle Bed Light", "command": 230},
          {"name": "Massage On", "command": 200},
          {"name": "Massage Off", "command": 201},
          {"name": "Massage Pattern Step", "command": 226},
          {"name": "Head Up (Increment)", "command": 110},
          {"name": "Head Down (Increment)", "command": 111},
          {"name": "Foot Up (Increment)", "command": 112},
          {"name": "Foot Down (Increment)", "command": 113},
          {"name": "Lumbar Up (Increment)", "command": 114},
          {"name": "Lumbar Down (Increment)", "command": 115},
          {"name": "Stop All", "command": 1},
          {"name": "Stop Everything", "command": 31},
          {"name": "Head Stop", "command": 107},
          {"name": "Foot Stop", "command": 108},
          {"name": "Lumbar Stop", "command": 106}
        ]
      }
    }
  }
}
