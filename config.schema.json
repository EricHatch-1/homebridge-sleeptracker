{
  "pluginAlias": "Sleeptracker",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Sleeptracker Adjustable Base",
  "footerDisplay": "Creates momentary switches in Apple Home.",
  "schema": {
    "type": "object",
    "required": [
      "name",
      "email",
      "password"
    ],
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "minLength": 1,
        "default": "Sleeptracker"
      },
      "email": {
        "title": "Email",
        "type": "string",
        "format": "email",
        "placeholder": "you@example.com"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "format": "password"
      },
      "namespace": {
        "title": "Namespace (optional)",
        "type": "string",
        "description": "Only required for some accounts/regions.",
        "default": ""
      },
      "processorId": {
        "title": "Processor ID (optional)",
        "type": "integer",
        "description": "Leave blank to auto-detect."
      },
      "authClientId": {
        "title": "Auth client id (advanced)",
        "type": "string",
        "description": "Defaults to the official app client id. Change only if instructed.",
        "default": "E3MlC3qvwJbsWo"
      },
      "appClientVersion": {
        "title": "App client version (advanced)",
        "type": "string",
        "description": "Defaults to the official app version. Change only if instructed.",
        "default": "3.2.5"
      },
      "authFailureCooldownSeconds": {
        "title": "Auth failure cooldown (seconds)",
        "type": "integer",
        "description": "After a failed login, wait this long before retrying. Helps avoid hammering the API.",
        "minimum": 0,
        "default": 300
      },
      "authMaxFailures": {
        "title": "Max auth failures before disable",
        "type": "integer",
        "description": "Disable API calls after this many consecutive auth failures (until restart).",
        "minimum": 0,
        "default": 5
      },
      "exposeEnvironment": {
        "title": "Expose environment sensors",
        "type": "boolean",
        "description": "Temperature, humidity, CO2, VOC, and air quality sensors.",
        "default": true
      },
      "statusPollIntervalSeconds": {
        "title": "Bed light poll interval (seconds)",
        "type": "integer",
        "description": "How often to refresh the Bed Light state. Minimum 5 seconds.",
        "minimum": 5,
        "default": 15
      },
      "commands": {
        "title": "Commands",
        "type": "array",
        "description": "HomeKit switches to create. Most commands are momentary.",
        "items": {
          "type": "object",
          "required": [
            "name",
            "command"
          ],
          "properties": {
            "name": {
              "type": "string",
              "title": "Name"
            },
            "command": {
              "type": "integer",
              "title": "Command"
            },
            "requestStatus": {
              "type": "boolean",
              "title": "Request status (optional)"
            }
          }
        },
        "default": [
          {
            "name": "Zero-G",
            "command": 0
          },
          {
